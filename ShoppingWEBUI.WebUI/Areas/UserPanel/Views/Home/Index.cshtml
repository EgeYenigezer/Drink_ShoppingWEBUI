@using ShoppingWEBUI.Core.DTO;
@model List<ProductDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/UserPanel/Views/Shared/_Layout.cshtml";
}

@{
    
    for (int i = 0; i < Model.Count(); i++)
    {
        string imagePath = "/MediaUpload/" + @Model[i].FeaturedImage;

        <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 col-12 mb-5">
            <figure class="effect-ming tm-video-item">
                <img src="@imagePath" alt="Image" class="img-fluid">
                <figcaption class="d-flex align-items-center justify-content-center">
                    <h2>@Model[i].Name</h2>
                    
                    <a href="photo-detail.html">View more</a>
                </figcaption>
            </figure>
            <div class="d-flex justify-content-between tm-text-gray">
                <span class="tm-text-gray-light">@Model[i].Name</span>
                <span>@Model[i].UnitPrice</span>
            </div>
        </div>
            
        
    } 

}



